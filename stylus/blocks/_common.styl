body 
	color plain-text
	font-family HelveticaNeue, sans-serif
	font-size 16px
	line-height 1.5
h2
	margin 0
	padding 14px 20px
	font-family BebasRegular
	font-size 26px
	line-height 32px
	color #fff
	text-transform uppercase
h3
	font-family BebasRegular
	margin 0
	font-size 22px
	line-height 1.5em
	text-transform uppercase
	@media screen and (min-width: 768px)
		margin 0
	@media screen and (min-width: 992px)
		margin 0
	@media screen and (min-width: 1200px)	
		margin 0 0 20px 0
h4
	font-family BebasRegular
	font-size 20px
	margin 0 0 10px
	color main-orange
	text-transform uppercase
	a
		font-size 18px
		margin 0 0 10px
		color main-orange
		text-transform uppercase
		&:hover
			text-decoration none
			color main-orange
		&:active
			color main-orange
		&:focus
			text-decoration none
			color main-orange
h5
	font-family BebasRegular
	margin-top 0
	position relative
	font-size 16px
	line-height 1.5em
	text-transform uppercase
	color main-orange
	overflow hidden
h6
	font-family BebasRegular
	font-size 14px
	margin 0 0 5px
	color main-orange
	text-transform uppercase


.container
	background-color #fff
.orange-line
	background-color lighten(main-orange, 50%)
.orange
	background-color main-orange
.main-title,
.main-content
	margin-bottom 25px
.left-line
	&:after 
		content " "
		position absolute
		width 100%
		height 50%
		top 25%
		margin-left 10px
		background-color #efefef

/* ABOUT US */
.about-us
	.plain-text
		font-size 12px
		line-height 1.5
		margin 0 0 25px 0
	.img-wrap
		width 228px
		height 227px
		padding 2px
		margin-right 25px
		border 1px solid #cccccc
	.quote
		font-style italic
		margin-left 50px
		padding-left 15px
		border-left 8px solid main-orange

/* ASIDE */
.aside-item
	margin-bottom 15px
.aside-about
	p
		font-size 12px
		line-height 1.5
.aside-categories
	p
		margin 0
		font-size 12px
		line-height 1.2
		&:last-child
			margin-bottom 10px
	a 
		color plain-text
.aside-gallery-item
	float left
	width 61px
	height 61px
	border 1px solid main-orange
	background-color rgba(main-orange, .3)
	margin-right 3px
	margin-bottom 3px
		
/* CONTACT US */
#map
	margin-bottom 35px
	iframe
		width 100%
		height 400px
.message
	p
		font-size 12px
		line-height 18px
input,textarea,button
	display block
	margin-bottom 10px
	font-family BebasRegular
input[type="text"],textarea
	width 100%
	font-size 14px
	line-height 14px
	color main-orange
	text-transform uppercase
	border 1px solid main-orange
	padding 10px 13px
	outline none
	@media screen and (min-width: 768px)
		width 50%
textarea
	width 100% !important
	max-width 100% !important
	height 200px !important
button
	background-color main-orange
	font-size 14px
	line-height 14px
	padding 10px 13px
	color #fff
	text-transform uppercase
	border none
	outline none
	
/* BLOG */
.blog-item
	position relative
	margin-bottom 100px
	p
		font-size 12px
		line-height 1.5
	&:after
		content " "
		position absolute
		bottom -40px
		width 100%
		height 13px
		background-color #efefef
.item-image
	margin-bottom 20px
.option
	margin-bottom 15px
	p
		font-size 12px
		margin 0
		color #bababa
.pair
	background-color #f6f6f6
	padding 25px 25px 25px 75px
	p
		position relative
		margin 0
		font-size 13px
		line-height 1.5
		&:before
			content 'â€œ'
			position absolute
			left -50px
			top -15px
			font-family TimesNewRoman
			font-size 72px
			line-height 72px
			color main-orange
.nonimage
	&>a
		font-size 12px
		line-height 1.5em
		color #a0a0a0
.pagination
	margin-bottom 20px
	ul
		margin 0
		padding 0
	li
		display inline-block
		text-align center
	a
		display block
		font-size 14px
		line-height 26px
		width 26px
		color #fff
		background-color rgba(main-orange, .5)
		text-decoration none
	.active
		background-color main-orange


/* PORTFOLIO */
.sort
	display none
	margin-bottom 20px
	ul
		margin 0
		padding 0
	li
		display inline-block
		vertical-align top
	a
		padding 8px 10px
		font-family BebasRegular
		font-size 16px
		text-transform uppercase		
		text-decoration none
		color main-gray
		&:hover
			background-color rgba(main-orange, .5)
			color #fff
	.active
		background-color main-orange
		color #fff
		&:hover
			background-color main-orange
	@media screen and (min-width: 768px)
		display block
.port-item
	margin-bottom 30px
	img 
		width 100%
.port-desc
	border 1px solid main-gray
	border-top none
	padding 12px 15px
.port-title
	margin 0
	font-family BebasRegular
	font-size 18px
	color main-gray
.port-date
	margin 0
	font-family BebasRegular
	font-size 13px
	color main-orange
	
/* HOME */
.features
	margin-bottom 15px
	position relative
	img
		position absolute
	h4
		margin-top 5px
		margin-left 65px
	p
		font-size 12px
		margin-bottom 20px
	a
		font-family BebasRegular
		font-size 14px
		padding 10px 13px
		color #fff
		background-color main-orange
		text-decoration none
		&:hover
			background-color rgba(main-orange, .5)

/* HOME SLIDER */
.home-slider
	margin-bottom 30px
.c-caption
	display block
	width 100%
	padding 10px
	left 0
	bottom 0
	background-color rgba(main-orange, .7)
	color #fff
	p
		font-size 12px
		margin 0
	@media screen and (min-width: 768px)
		display block
		position absolute
		width 40%
		padding 10px
		left 50px
		bottom 50px
		background-color rgba(main-orange, .7)
		color #fff
		p
			font-size 12px
			margin 0
	@media screen and (min-width: 992px)
		display block
		position absolute
		width 40%
		padding 15px
		left 50px
		bottom 50px
		background-color rgba(main-orange, .7)
		color #fff
		p
			font-size 14px
			margin 0
.carousel-indicators
	display none
.carousel-control
	display none
	@media screen and (min-width: 992px)
		display block
.thumbnails
	img
		width 100%
.thumb-item
	margin-bottom 30px
.features-item
	margin-bottom 40px